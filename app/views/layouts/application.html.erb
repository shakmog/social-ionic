<!DOCTYPE HTML>
<html>
    <head>
        <title><%= content_for?(:title) ? yield(:title) : "Rendzina" %></title>
        <meta name="description" content="<%= content_for?(:description) ? yield(:description) : "Rendzina" %>">
        <%# This is the CSS files %>
        <%= stylesheet_link_tag "vendor/bootstrap.min" %>
        <%= stylesheet_link_tag "vendor/bootflat.min" %>
        <%= stylesheet_link_tag "vendor/font-awesome.min" %>
        <%= stylesheet_link_tag "vendor/animate" %>
        <%= stylesheet_link_tag "vendor/css/styles" %>
        <%= stylesheet_link_tag "slider" %>
        <%# Javascript Files %>
        <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
        <%= csrf_meta_tags %>
        <script>
          (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
          (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
          m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
          })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');

          ga('create', 'UA-77194406-1', 'auto');
          ga('send', 'pageview');

        </script>
    </head>
    <body>

      <%# For Navigations %>
      <div>
        <%= render 'layouts/navigation_links' %>
      </div>

      <%# For Pages Content %>
      <div>
        <%= render 'layouts/messages' %>
         <%= yield %>
      </div>

      <%# Footer Content %>
      <footer>
        <%= render 'layouts/footer' %>
      </footer>

    </body>

    </html>
