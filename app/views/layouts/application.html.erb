        src="https://www.facebook.com/tr?id=208927876160365&ev=PageView&noscript=1"
        /></noscript>
        <!-- End Facebook Pixel Code -->
    </head>
    <body>

      <%# For Navigations %>
      <div>
        <%= render 'layouts/navigation_links' %>
      </div>

      <%# For Pages Content %>
      <div>
        <%= render 'layouts/messages' %>
         <%= yield %>
      </div>

      <%# Footer Content %>
      <footer>
        <%= render 'layouts/footer' %>
      </footer>

    </body>

    </html>
