<section class="content-section">

   <div class="container">

   </div>


         <div class="container">
           <center>
               <h3 class="design">Rendzina Blog <br/><i class="fa fa-arrow-circle-o-down"></i></h3>
               <hr/>

           </center>


           <div class="col-md-4">
              <%= image_tag "blog", width: "80%" %>
           </div>
           <div class="col-md-6">
           <% @posts.each do |post| %>
             <h4><%= link_to post.title, post %></h4>
             <% if post.avatar? %>
               <%= image_tag post.avatar.url(:medium) %>
             <% end %>
             <p><%= truncate post.message %></p>
               <p><%= image_tag post.author.url(:thumb) %>
               Written by: <%= post.author_name %></p>
             <p><%= time_ago_in_words post.created_at %> ago</p>
             <p><%= post.comments.count %> comments</p>
             <hr>
           <% end %>

           <%= link_to 'New Post', new_post_path %>
         </div>
         <Div class="clearfix"></div>
        </div>


    </div>
</section>


