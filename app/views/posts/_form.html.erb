<%= simple_form_for @post, url: posts_path, html: { multipart: true } do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :message %>
    <%= f.file_field :avatar %>
    <hr>
    <%= f.input :author_name %>
    <%= f.file_field :author %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
